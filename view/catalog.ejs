<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style/common.min.css">
    <link rel="stylesheet" href="/style/catalog.css">
    <link rel="stylesheet" href="/style/pagination.css">
    
    <script type="text/javascript" src="/js/jquery-1.11.min.js"></script>
    <script type="text/javascript" src="/js/jquery.pagination.js"></script>
    <script src='/js/common.js'></script>
    <script src='/js/catalog.js'></script>


    <title><%=title%></title>
</head>
<body>
      <%- include('./component/header')%>

    <div class="container">
        <!--左侧-->
        <div class='container-types'>
            <div class="boxLeft">
                <!--左侧导航栏上面的装饰-->
                <div class="navTop">
                    <div class="image">
                        <img src="../images/academic1.png" alt="">
                    </div>
                    <div class="line">
                        <a href="#"><%=title%></a>
                    </div>
                </div>

                <!--左侧导航栏-->
                <ul class="itemUl">
                <% for(var i = 0;i < sorts.length;i++){%>
                    <li class="itemLi">
                        <a href="/showArticle/catalog?type=<%=i%>" id="active"><%=sorts[i]%></a>
                    </li>
                    <%}%>
                </ul>

                <!--左侧导航栏下面的图片-->
                <div class="navBottom">
                    <img src="../images/academic2.png" alt="">
                </div>


            </div>

            <div class="boxRight">
                <div class="part-title">
                    <%=title%>
                </div>
                <div class="detail">
                    <ul class='detail-box'>
                <% for(var i =  0;i < data.length ;i++){%>
                    
                        <li>
                            <a href='/showArticle/content?id=<%=data[i].id%>&type=<%=data[i].type%>&sort=<%=sort%>'><%=data[i].title %></a>
                        </li>
                    <%}%>
                        
                    </ul>
                </div>
                <!--分页组件-->
                <div class="M-box" data-page=<%=data.pageCount%> data-sort=<%=sort%> data-type=<%=data[0].type%>></div>
            </div>
        </div>
    </div>
    <%- include('./component/footer') -%>
</body>
</html>