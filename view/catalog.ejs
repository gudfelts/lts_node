<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style/common.min.css">
    <link rel="stylesheet" href="/style/catalog.css">
    <link rel="stylesheet" href="/style/pagination.css">
    
    <script type="text/javascript" src="/js/jquery-1.11.min.js"></script>
    <script type="text/javascript" src="/js/jquery.pagination.js"></script>
    <script src='/js/common.js'></script>
    <script src='/js/catalog.js'></script>


    <title><%=title%></title>
</head>
<body>
      <%- include('./component/header')%>

    <div class="container">
        <!--左侧-->
        <div class='container-types'>
            <div class="boxLeft">
                <!--左侧导航栏上面的装饰-->
                <div class="navTitle">
                       <a href="#"><%=title%></a>
                </div>

                <!--左侧导航栏-->
                <ul class="itemUl">
                    <% for(var i = 0;i < sorts.length;i++){%>
                    <li class="itemLi">
                        <a href="/showArticle/catalog?type=<%=i+1%>&sort=<%=sort%>" <%if(i==type-1){%> id='active'<%}%> ><%=sorts[i]%></a>
                    </li>
                    <%}%>
                </ul>


              <div class='side-article'>
                    <div class="navTitle ">
                        近期热门文章
                    </div>
                    <ul class="hotBox">
                    <%if(!!HotArticle){
                     for(var i =  0;i < HotArticle.length ;i++){%>
                     
                        <li class="hot-Item">
                            <a href='/showArticle/article?id=<%=HotArticle[i].id%>&type=<%=HotArticle[i].type%>&sort=<%=sort%>'><%=HotArticle[i].title %></a>
                        </li>
                        <%}}%>
                    
                    </ul>
                </div>


            </div>

            <div class="boxRight">
                <div class="part-title">
                    <%=title%>
                    <div><input type='text' id='search-input'><button id='search-btn'>搜索</button></div>
                </div>
                <div class="detail">
                    <%if(data.length > 0){%>
                
                    <ul class='detail-box'>
                    
                        <%for(var i =  0;i < data.length ;i++){%>
                    
                        <li>
                            <a href='/showArticle/article?id=<%=data[i].id%>&type=<%=data[i].type%>&sort=<%=sort%>'><%=data[i].title %></a>
                        </li>
                       <%}%> 
                    </ul>
                    <%}%>
                    <%if(data.length === 0){%>
                        <p class='datail-warm'>暂无内容</p>
                    <%}%>                    
                </div>
                <%if(data.length > 0){%>
                <!--分页组件-->
                <div class="M-box" data-page=<%=data.pageCount%> data-sort=<%=sort%> data-type=<%=type%>></div>
                <%}%>
            </div>
        </div>
    </div>
    <%- include('./component/footer') -%>
</body>
</html>