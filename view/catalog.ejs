<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/style/common.min.css">
    <link rel="stylesheet" href="/style/catalog.css">
    <link rel="stylesheet" href="/style/pagination.css">
    
    <script type="text/javascript" src="/js/jquery-1.11.min.js"></script>
    <script type="text/javascript" src="/js/jquery.pagination.js"></script>

    <script src='/js/common.js'></script>
    <script src='/js/catalog.js'></script>


    <title><%=title%></title>
</head>
<body>
      <%- include('./component/header')%>

    <div class="container">
        <!--左侧-->
        <div class='container-types'>
            <div class="boxLeft">
                <!--左侧导航栏上面的装饰-->
                <div class="navTitle">
                       <a href="#"><%=title%></a>
                </div>

                <!--左侧导航栏-->
                <ul class="itemUl">
                    <% for(var i = 0;i < sorts.length;i++){%>
                    <li class="itemLi">
                        <a href="/showArticle/catalog?type=<%=i+1%>&sort=<%=sort%>" <%if(i==type-1){%> id='active'<%}%> ><%=sorts[i]%></a>
                    </li>
                    <%}%>
                </ul>


              <div class='side-article'>
                    <div class="top-band-title" style="display: block;">
        
        

                <a class="no-comment-title">近期热门文章</a>
            <em id="top-bandArrow" style="left: 145px;"></em>
            </div>
                    <ul class="hotBox">
                    <%if(!!HotArticle){
                     for(var i =  0;i < HotArticle.length ;i++){%>
                     
                        <li class="hot-item ">
                             <div class='item-img'>
                                     <%if(HotArticle[i].img !=='0'){%>
                                        <img <%=HotArticle[i].img%> class='hot-img' alt=''>
                                  <%}%>
                                </div>
                                 <div class='item-content'>
                                    <a href='/showArticle/article?id=<%=HotArticle[i].id%>&type=<%=HotArticle[i].type%>&sort=<%=sort%>'>
                                    <%=HotArticle[i].title %>
                                </a>
                                 </div>     </li>
                        <%}}%>
                    
                    </ul>
                </div>


            </div>
            
            <div class="boxRight">
                <div class="part-title">
                    <%=title%>

        <div class="s-bar">
            <input type="text"  class="search-input" placeholder="点击搜索">
            <a  class='search-icon'></a>
          </div>

                </div>
                <div class="detail">
                    <%if(data.length > 0){%>
                
                    <ul class='detail-box'>
                    
                        <%for(var i =  0;i < data.length ;i++){%>
                    
                        <li>
                            <a href='/showArticle/article?id=<%=data[i].id%>&type=<%=data[i].type%>&sort=<%=sort%>'><h3 class='new-title'><%=data[i].title %></h3></a>
                            <div class='new-box'>
                                <%if(data[i].img !=='0'){%>
                                <img <%=data[i].img%> class='new-img' alt=''>
                              
                                <div class='new-content'>
                                    <a href='/showArticle/article?id=<%=data[i].id%>&type=<%=data[i].type%>&sort=<%=sort%>' class='new-content-summary'>
                                    <%if(data[i].summary){%><%-data[i].summary%><%}%>
                                    
                                    </a>
                                </div>
                                
                                <%}else{%>
                                     <div class='new-content-other'>
                                         <a href='/showArticle/article?id=<%=data[i].id%>&type=<%=data[i].type%>&sort=<%=sort%>' class='new-content-summary'>
                                    <%if(data[i].summary){%><%-data[i].summary%><%}%>
                                    
                                    </a>
                                   </div>
                                <%}%>
                                    <div class='new-content-data'><span class='data-time'><%=data[i].time%></span><span class='data-browse'><%=data[i].browse%></span><span class='data-praise'><%=data[i].praise%></span></div>
                                
                            </div>
                        </li>
                       <%}%> 
                    </ul>
                    <%}%>
                    <%if(data.length === 0){%>
                        <p class='datail-warm'>暂无内容</p>
                    <%}%>                    
                </div>
                <%if(data.length > 0){%>
                <!--分页组件-->
                <div class="M-box" data-page=<%=data.pageCount%> data-sort=<%=sort%> data-type=<%=type%>></div>
                <%}%>
            </div>
        </div>
    </div>
    <%- include('./component/footer') -%>
</body>
</html>